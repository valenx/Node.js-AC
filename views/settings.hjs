  <body>
  
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Arduino Control</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="/">Home</a></li>
            <li class="active"><a href="/settings">Settings</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container content">
      <h1>ARDUINOS</h1>
      <div class="row">
          <table class="table table-condensed table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>Room</th>
                <th>IP</th>
                <th>Port</th>
                <th>Sensors</th>
                <th>Functions</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>1</td>
                <td>My Room</td>
                <td>192.168.10.6</td>
                <td>80</td>
                <td></td>
                <td>controlling RGB LED Strips</td>
                <td>
                  <div class="pull-right">
                  <button type="button" class="btn btn-primary btn-xs">edit</button>
                  <button type="button" class="btn btn-danger btn-xs">delete</button>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
      </div>
      
      <h4 style="margin-top:120px;">ADD A NEW ARDUINO</h4>
      <div class="row">
        <table class="table table-condensed">
          <tr>
            <td><input class="form-control input-sm" type="text" placeholder="#"></td>
            <td><input class="form-control input-sm" type="text" placeholder="Room"></td>
            <td><input class="form-control input-sm" type="text" placeholder="IP"></td>
            <td><input class="form-control input-sm" type="text" placeholder="port"></td>
            <td><input class="form-control input-sm" type="text" placeholder="Sensors"></td>
            <td><input class="form-control input-sm" type="text" placeholder="Funktions"></td>
            <td><button type="button" class="btn btn-default btn-sm">save</button></td>
          </tr>
        </table>
      </div>
    </div>

